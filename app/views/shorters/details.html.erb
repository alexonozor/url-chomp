<script>
$(function () {
  new Highcharts.Chart({
    chart: { renderTo: 'orders_chart' },
    title: { text: 'Click Count' },
    xAxis: { type: 'datetime' },
    yAxis: {
      title: { text: 'clicks'}
    },
    series: [{
      pointInterval: <%= 1.day * 1000 %>,
      data: [<%= @shorter.clicks  %>]
    }]
  });
});
</script>

<div class="well text-center"><b><%=link_to "#{domain_request+'/' + @shorter.short_url}", domain_request+'/' + @shorter.short_url  %></b></div>
<%= link_to (truncate "#{@shorter.long_url}".html_safe, length: 30), @shorter.long_url %>
<div id="orders_chart" style="height: 200px;"></div>

<h3>Top Countries</h3>

<div class="progress">
  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40"
       aria-valuemin="0" aria-valuemax="100" style="width:40%">
    Nigeria
  </div>
</div>

<div class="progress">
  <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="50"
       aria-valuemin="0" aria-valuemax="100" style="width:50%">
    Brazil
  </div>
</div>

<div class="progress">
  <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60"
       aria-valuemin="0" aria-valuemax="100" style="width:60%">
    Togo
  </div>
</div>

<div class="progress">
  <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="70"
       aria-valuemin="0" aria-valuemax="100" style="width:70%">
    Kenya
  </div>
</div>
