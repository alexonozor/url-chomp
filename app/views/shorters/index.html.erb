

<div class="row">
  <div class="col-md-7">
    <div class="form-set">
      <%= render 'form' %>
    </div>


    <div class="well" id="Url-flash" data-toggle="tooltip" data-placement="top" title="Copy your URL">

    </div>

    <div class="clearfix"></div>
    <% if current_user %>
        <table class="table">
          <thead>
          <tr>
            <td>Long url</td>
            <td>Short url</td>
            <td>Clicks</td>
            <td>created at</td>
            <td>Action</td>
          </tr>
          </thead>
          <tbody id="url-append">
            <%= render @shorter %>
          </tbody>
        </table>
    <% else %>
        <div class="alert alert-warning" role="alert">Sign up or Sign in to keep your history and statistic of your URL</div>
    <% end %>
  </div>
  <div class="col-md-5" id="details">
    <%= render template: 'shorters/public' %>
  </div>
  <p class="text-center set-display"><a href="#">View Public url</a></p>
</div>

<script>
   $('sup').hover(function(){
    $(this).popover('toggle')
   });

   $('.set-display').click(function(){
       $(this).hide();
       $('tr').removeClass('active');
       $('.active-ion').remove();
       $('#details').html('<%=j render template: 'shorters/public' %>');
   })
</script>





