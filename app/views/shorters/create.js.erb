<% if current_user %>
    $('#Url-flash').html('<%= escape_javascript(flash.now[:short_url]) %>');
    $('#details').html('<%= j render template: 'shorters/details.html.erb' %>');
    $("#url-append").html("<%= j (render @shorter) %>");
    $("#new_shorter")[0].reset()
<% else %>
    $('#Url-flash').css('display', 'block');
    $('#Url-flash').html('<%= escape_javascript(flash.now[:short_url]) %>');
<% end %>